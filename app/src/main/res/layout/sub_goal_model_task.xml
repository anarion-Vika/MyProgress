<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glTopTitileHor_modelSubGoalTask"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.03"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glLeftVer_modelSubGoalTask"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvNameSubGoal_modelSubGoalTask"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Назва завдання для цiлi"
        android:textAlignment="center"
        android:textColor="@color/textColorAccent"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/glTopTitileHor_modelSubGoalTask"
        app:layout_constraintWidth_percent="0.5" />

    <TextView
        android:id="@+id/tvTitleRelativeGoal_modelSubGoalTask"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:text="Пов'язана цiль:"
        app:layout_constraintHeight_percent="0.03"
        app:layout_constraintLeft_toRightOf="@+id/ivIconTypeSubGoal_modelSubGoalTask"
        app:layout_constraintTop_toBottomOf="@+id/tvNameSubGoal_modelSubGoalTask" />

    <TextView
        android:id="@+id/idNameRelativeSubGoal_modelSubGoalTask"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Цiль"
        app:layout_constraintLeft_toRightOf="@+id/ivIconTypeSubGoal_modelSubGoalTask"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleRelativeGoal_modelSubGoalTask"
        app:layout_constraintWidth_percent="0.75" />

    <TextView
        android:id="@+id/idDateCreate_modelSubGoalTask"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:text="Дата створення"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toBottomOf="@+id/ivIconTypeSubGoal_modelSubGoalTask"
        app:layout_constraintHeight_percent="0.03"
        app:layout_constraintRight_toLeftOf="@+id/ibStateSubGoal_modelSubGoalTask"
        app:layout_constraintWidth_percent="0.5" />

    <ImageView
        android:id="@+id/ivIconTypeSubGoal_modelSubGoalTask"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:background="@mipmap/ic_sub_goal_foreground"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvNameSubGoal_modelSubGoalTask"/>

    <ImageButton
        android:id="@+id/ibStateSubGoal_modelSubGoalTask"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@mipmap/ic_bad_foreground"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTypeSubGoal_modelSimpleTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Тип завдання"
        app:layout_constraintBottom_toTopOf="@id/glTopTitileHor_modelSubGoalTask"
        app:layout_constraintRight_toLeftOf="@+id/ibStateSubGoal_modelSubGoalTask" />

</androidx.constraintlayout.widget.ConstraintLayout>