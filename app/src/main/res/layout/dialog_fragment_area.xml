<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glTitleHor_dialogTask"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gNameTaskHor_dialogTask"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gTypeTaskHor_dialogTask"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gButtonBottomHor_dialogTask"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glTitleVer_dialogTask"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glButtonSaveVer_dialogTask"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tvTitle_dialogTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Створити сферу розвитку"
        android:textAppearance="?android:attr/textAppearanceLarge"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/glTitleHor_dialogTask" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorAccent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle_dialogTask" />

    <TextView
        android:id="@+id/tvNameArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/title_name_area_dialogfr"
        android:textAppearance="?android:attr/textAppearanceMedium"
        app:layout_constraintLeft_toLeftOf="@id/glTitleVer_dialogTask"
        app:layout_constraintTop_toTopOf="@id/gNameTaskHor_dialogTask" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="@string/hint_add_name_area_dialogfr"
        app:layout_constraintLeft_toLeftOf="@id/glTitleVer_dialogTask"
        app:layout_constraintTop_toBottomOf="@id/tvNameArea"
        app:layout_constraintWidth_percent="0.8" />


    <TextView
        android:id="@+id/tbWhatUseful"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/title_what_useful_dealigfr"
        android:textAppearance="?android:attr/textAppearanceMedium"
        app:layout_constraintLeft_toLeftOf="@id/glTitleVer_dialogTask"
        app:layout_constraintTop_toTopOf="@id/gTypeTaskHor_dialogTask"
        app:layout_constraintWidth_percent="0.8" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="додайте користь розвитку сфери"
        app:layout_constraintLeft_toLeftOf="@id/glTitleVer_dialogTask"
        app:layout_constraintTop_toBottomOf="@id/tbWhatUseful"
        app:layout_constraintWidth_percent="0.8" />


    <Button
        android:id="@+id/btnSave_dialogTask"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_save_dialogfr"
        app:layout_constraintBottom_toBottomOf="@id/gButtonBottomHor_dialogTask"
        app:layout_constraintRight_toRightOf="@id/glButtonSaveVer_dialogTask"
        app:layout_constraintWidth_percent="0.35" />

    <Button
        android:id="@+id/btnCancel_dialogTask"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_cancel_dialogfr"
        app:layout_constraintBottom_toBottomOf="@id/gButtonBottomHor_dialogTask"
        app:layout_constraintLeft_toLeftOf="@id/glTitleVer_dialogTask"
        app:layout_constraintWidth_percent="0.35" />

</androidx.constraintlayout.widget.ConstraintLayout>
